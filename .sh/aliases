# Core commands.
alias ls='ls --color=auto'
alias l='ls -lh'
alias la='l -a'
alias lt='l -t'
alias lta='lt -a'
alias lat='lta'

# SSH things.
eval alias "S=ssh" $(sed -n -e 's/^Host *\([^ ]\+\)$/S\1="S \1"/p' .ssh/config | tr '\n' ' ')

# Git things.
if which git >/dev/null 2>&1; then
	alias G='git'
	eval alias $( \
		git config --global --get-regexp '^alias\.' | \
		sed -e 's/^alias\.\([^ ]\{1,\}\) .\{1,\}$/G\1="G \1"/' | \
		tr '\n' ' ' \
	)
fi
