! Reload this with “xrdb -merge .Xdefaults”.

XTerm*background: black
XTerm*foreground: grey
XTerm*pointerColor: SpringGreen
! No really, this should be the standard.
XTerm*metaSendsEscape: true



! Fade out the text when terminal is not focused.
Rxvt.fading: 30

! Tiny scroll bar at the right side.
Rxvt.scrollstyle: plain
Rxvt.scrollBar_right: true
! Do not scroll while in buffer, even on output, except if I press a key.
Rxvt.scrollTtyOutput: false
Rxvt.scrollWithBuffer: false
Rxvt.scrollTtyKeypress: true
! Huge scrollback buffer.
Rxvt.saveLines: 10000

! Make it old-school.
Rxvt.cursorBlink: true

! rxvt-unicode terminfo exists on too few systems.
Rxvt.termName: rxvt

! Open login shells.
Rxvt.loginShell: true

! Sorry Vim, 8th bit meta is just broken.
Rxvt.meta8: false

! Disable Perl extensions for now, I do not actively use them
Rxvt.perl-ext:
Rxvt.perl-ext-common:

! Colors!
Rxvt.cursorColor: SpringGreen
Rxvt.cursorColor2: black
Rxvt.pointerColor: SpringGreen
Rxvt.scrollColor: #8888AA
! 0: black, 1: red, 2: green, 3: yellow, 4: blue, 5: magenta, 6: cyan, 7: white
Rxvt.background: #000000
Rxvt.color0:     #000000
Rxvt.color8:     #666666
Rxvt.color1:     #9c0804
Rxvt.color9:     #e80e07
Rxvt.color2:     #5c991c
Rxvt.color10:    #7bcc25
Rxvt.color3:     #ffa929
Rxvt.color11:    #fff129
Rxvt.color4:     #003687
Rxvt.color12:    #0063f7
Rxvt.color5:     #4f0035
Rxvt.color13:    #cf008a
Rxvt.color6:     #06767a
Rxvt.color14:    #0abcc2
Rxvt.foreground: #bebebe
Rxvt.color7:     #bebebe
Rxvt.color15:    #ffffff

